	@media (max-height: 600px) and (orientation: landscape) {
		.hero {
			padding-top: 80px;
			padding-bottom: 2rem;
			min-height: auto;
		}

		.hero-content {
			gap: 1rem;
			min-height: auto;
		}

		.mascot-container {
			width: 200px;
			height: 200px;
		}

		.hero-title {
			font-size: 1.8rem;
			margin-bottom: 0.5rem;
		}

		.hero-description {
			margin-bottom: 1rem;
			font-size: 1rem;
		}
	}

	/* Media query espec√≠fica para dispositivos m√≥veis reais */
	@media only screen and (max-device-width: 480px) {
		.hero {
			padding-top: 90px;
			padding-bottom: 2rem;
			min-height: 100vh;
		}

		.hero-content {
			grid-template-columns: 1fr;
			gap: 1.5rem;
			display: flex;
			flex-direction: column;
			text-align: center;
			min-height: auto;
			padding: 1rem 0;
		}

		.mascot-section {
			order: 1;
			margin-bottom: 2rem;
			flex-shrink: 0;
		}

		.text-content {
			order: 2;
			max-width: none;
			margin-top: 1rem;
			padding-top: 1rem;
			flex-shrink: 0;
		}

		.mascot-container {
			width: 280px;
			height: 280px;
			margin: 0 auto 1.5rem auto;
		}

		.hero-title {
			font-size: 2rem;
			margin-bottom: 1rem;
			line-height: 1.2;
		}

		.hero-description {
			margin-bottom: 2rem;
			font-size: 1rem;
			line-height: 1.5;
		}

		.cta-button {
			margin: 0 auto;
			max-width: 280px;
		}
	}


	</style>

<script>
	document.addEventListener('DOMContentLoaded', function() {
		const explorarBtn = document.getElementById('explorarDestinosBtn');
		const modal = document.getElementById('destinosModal');
		const closeBtn = document.getElementById('closeModal');

		function openModal() {
			if (!modal) return;
			modal.classList.add('visible');
			document.body.style.overflow = 'hidden';
		}

		function closeModal() {
			if (!modal) return;
			modal.classList.remove('visible');
			document.body.style.overflow = '';
		}

		// Abrir modal
		if (explorarBtn) {
			explorarBtn.addEventListener('click', openModal);
		}

		// Fechar modal com bot√£o X
		if (closeBtn) {
			closeBtn.addEventListener('click', closeModal);
		}

		// Fechar modal clicando fora do conte√∫do
		if (modal) {
			modal.addEventListener('click', function(e) {
				if (e.target === modal) {
					closeModal();
				}
			});
		}

		// Fechar modal com tecla ESC
		document.addEventListener('keydown', function(e) {
			if (e.key === 'Escape' && modal.classList.contains('visible')) {
				closeModal();
			}
		});
	});
</script>