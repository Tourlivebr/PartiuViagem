		.hero {
			padding-top: 100px;
			padding-bottom: 3rem;
		}

		.hero-content {
			gap: 1.5rem;
			display: flex;
			flex-direction: column;
		}

		.hero-title {
			font-size: 2rem;
			margin-bottom: 1rem;
		}

		.hero-description {
			margin-bottom: 2rem;
		}

		.container {
			padding: 0 1rem;
		}

		.mascot-container {
				width: 250px;
				height: 250px;
				margin-bottom: 2rem;
			}

		.mascot-section {
			margin-bottom: 2rem;
			order: 1;
		}

		.text-content {
			margin-top: 1rem;
			order: 2;
			padding-top: 1rem;
		}
		}

