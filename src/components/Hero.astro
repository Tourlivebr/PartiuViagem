<style>
	.hero {
		position: relative;
		min-height: 100vh;
		display: flex;
		align-items: center;
		overflow: hidden;
		padding-top: 100px; /* Account for fixed header */
	}

	.hero-background {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(135deg, #e0f2fe 0%, #f3e5f5 50%, #fff3e0 100%);
		z-index: -2;
	}

	.hero-overlay {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse"><path d="M 10 0 L 0 0 0 10" fill="none" stroke="%23ffffff" stroke-width="0.5" opacity="0.3"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>') repeat;
		opacity: 0.3;
		z-index: -1;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 2rem;
		width: 100%;
	}

	.hero-content {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 4rem;
		align-items: center;
		min-height: 80vh;
	}

	.text-content {
		max-width: 500px;
	}

	.hero-title {
		font-size: 3.5rem;
		font-weight: 800;
		line-height: 1.1;
		color: #1f2937;
		margin-bottom: 1.5rem;
	}

	.highlight {
		color: #1e3a8a;
		position: relative;
	}

	.hero-description {
		font-size: 1.1rem;
		line-height: 1.6;
		color: #4b5563;
		margin-bottom: 2.5rem;
	}

	.cta-button {
		background: linear-gradient(135deg, #1e3a8a 0%, #3b82f6 100%);
		color: white;
		border: none;
		padding: 1rem 2rem;
		border-radius: 50px;
		font-size: 1rem;
		font-weight: 600;
		letter-spacing: 0.5px;
		cursor: pointer;
		transition: all 0.3s ease;
		display: flex;
		align-items: center;
		gap: 0.5rem;
		box-shadow: 0 8px 25px rgba(30, 58, 138, 0.3);
	}

	.cta-button:hover {
		transform: translateY(-2px);
		box-shadow: 0 12px 35px rgba(30, 58, 138, 0.4);
	}

	.button-icon {
		font-size: 1.2rem;
	}

	.mascot-section {
		position: relative;
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.mascot-container {
		position: relative;
		width: 400px;
		height: 400px;
	}

	.mascot-image {
		width: 100%;
		height: 100%;
		object-fit: cover;
		border-radius: 20px;
		box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
	}

	.location-tag {
		position: absolute;
		background: white;
		padding: 0.5rem 1rem;
		border-radius: 20px;
		box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
		display: flex;
		align-items: center;
		gap: 0.5rem;
		font-size: 0.85rem;
		font-weight: 600;
		color: #374151;
		animation: float 3s ease-in-out infinite;
	}

	.chile {
		top: 20%;
		left: -10%;
		animation-delay: 0s;
	}

	.iguacu {
		bottom: 20%;
		right: -15%;
		animation-delay: 1.5s;
	}

	.floating-element {
		position: absolute;
		background: white;
		border-radius: 12px;
		box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
		padding: 1rem;
		animation: float 4s ease-in-out infinite;
	}

	.phone {
		top: 10%;
		right: -20%;
		width: 60px;
		height: 80px;
		animation-delay: 0.5s;
	}

	.map {
		bottom: 10%;
		left: -15%;
		width: 80px;
		height: 60px;
		animation-delay: 2s;
	}

	.phone-screen {
		width: 100%;
		height: 100%;
		background: linear-gradient(135deg, #3b82f6 0%, #1e3a8a 100%);
		border-radius: 8px;
		display: flex;
		align-items: center;
		justify-content: center;
		color: white;
	}

	.phone-content {
		text-align: center;
	}

	.currency {
		font-size: 1.5rem;
		font-weight: bold;
	}

	.location-pin {
		font-size: 0.8rem;
	}

	.map-content {
		width: 100%;
		height: 100%;
		position: relative;
		background: #f0f9ff;
		border-radius: 8px;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.map-lines {
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		width: 30px;
		height: 20px;
		background: linear-gradient(45deg, #3b82f6 2px, transparent 2px),
					linear-gradient(-45deg, #3b82f6 2px, transparent 2px);
		background-size: 8px 8px;
		opacity: 0.3;
	}

	.map-pin {
		font-size: 1.2rem;
		z-index: 1;
	}

	.send-button {
		position: absolute;
		bottom: -20px;
		right: 20px;
		width: 60px;
		height: 60px;
		background: linear-gradient(135deg, #8b5cf6 0%, #a855f7 100%);
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		box-shadow: 0 8px 25px rgba(139, 92, 246, 0.3);
		cursor: pointer;
		transition: transform 0.3s ease;
		animation: pulse 2s infinite;
	}

	.send-button:hover {
		transform: scale(1.1);
	}

	@keyframes float {
		0%, 100% {
			transform: translateY(0px);
		}
		50% {
			transform: translateY(-10px);
		}
	}

	@keyframes pulse {
		0% {
			box-shadow: 0 8px 25px rgba(139, 92, 246, 0.3);
		}
		50% {
			box-shadow: 0 8px 25px rgba(139, 92, 246, 0.6);
		}
		100% {
			box-shadow: 0 8px 25px rgba(139, 92, 246, 0.3);
		}
	}

	@media (max-width: 768px) {
		.hero {
			padding-top: 120px;
			min-height: auto;
			padding-bottom: 2rem;
		}

		.hero-content {
			grid-template-columns: 1fr;
			gap: 5rem;
			text-align: center;
			min-height: auto;
		}

		.text-content {
			order: 2;
			max-width: none;
		}

		.mascot-section {
			order: 1;
		}

		.hero-title {
			font-size: 2.5rem;
			margin-bottom: 1rem;
		}

		.hero-description {
			margin-bottom: 1.5rem;
		}

		.cta-button {
			margin: 0 auto;
			max-width: 280px;
		}

		.mascot-container {
			width: 300px;
			height: 300px;
			margin: 0 auto;
		}

		.location-tag {
			position: relative;
			margin: 0.5rem;
			display: inline-flex;
		}

		.chile {
			top: auto;
			left: auto;
		}

		.iguacu {
			bottom: auto;
			right: auto;
		}

		.floating-element {
			display: none;
		}

		.send-button {
			display: none;
		}
	}

	@media (max-width: 480px) {
		.hero {
			padding-top: 100px;
		}

		.hero-title {
			font-size: 2rem;
		}

		.container {
			padding: 0 1rem;
		}

		.mascot-container {
				width: 250px;
				height: 250px;
			}
		}


	</style>

<script>
	document.addEventListener('DOMContentLoaded', function() {
		const explorarBtn = document.getElementById('explorarDestinosBtn');
		const modal = document.getElementById('destinosModal');
		const closeBtn = document.getElementById('closeModal');

		function openModal() {
			if (!modal) return;
			modal.classList.remove('hidden');
			modal.classList.add('flex');
			document.body.style.overflow = 'hidden';
		}

		function closeModal() {
			if (!modal) return;
			modal.classList.add('hidden');
			modal.classList.remove('flex');
			document.body.style.overflow = '';
		}

		// Abrir modal
		if (explorarBtn) {
			explorarBtn.addEventListener('click', openModal);
		}

		// Fechar modal com bot√£o X
		if (closeBtn) {
			closeBtn.addEventListener('click', closeModal);
		}

		// Fechar modal clicando fora do conte√∫do
		if (modal) {
			modal.addEventListener('click', function(e) {
				if (e.target === modal) {
					closeModal();
				}
			});
		}

		// Fechar modal com tecla ESC
		document.addEventListener('keydown', function(e) {
			if (e.key === 'Escape' && !modal.classList.contains('hidden')) {
				closeModal();
			}
		});
	});
</script>