		.hero-content {
			gap: 1rem;
		}

		.mascot-container {
			width: 220px;
			height: 220px;
			margin-bottom: 1.5rem;
		}

		.mascot-section {
			margin-bottom: 1.5rem;
		}

		.text-content {
			padding-top: 1.5rem;
		}

		.hero-title {
			font-size: 1.8rem;
		}
		}

