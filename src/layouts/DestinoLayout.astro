---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import { Image } from 'astro:assets';

type Props = CollectionEntry<'destinos'>['data'];

const { title, description, location, country, price, currency, rating, reviewCount, featuredImage, galleryImages } = Astro.props;
---

<html lang="pt-BR">
	<head>
		<BaseHead title={title} description={description} />
	</head>
	<body>
		<main>
			<article class="destino-detail">
				<div class="hero-section">
					<Image 
						src={featuredImage} 
						alt={title}
						width={1200}
						height={600}
						class="hero-image"
					/>
					<div class="hero-content">
						<h1>{title}</h1>
						<div class="location-info">
							<span>üìç {location}, {country}</span>
						</div>
						<div class="rating">
							<span class="stars">{'‚òÖ'.repeat(Math.floor(rating))}</span>
							<span>{rating} ({reviewCount} avalia√ß√µes)</span>
						</div>
						<div class="price-info">
							<span class="price">{currency} {price.toLocaleString('pt-BR')}</span>
						</div>
					</div>
				</div>

				<div class="content-section">
					<slot />
				</div>

				{galleryImages && galleryImages.length > 0 && (
					<div class="gallery-section">
						<h2>Galeria</h2>
						<div class="gallery-grid">
							{galleryImages.map((image) => (
								<Image 
									src={image} 
									alt={title}
									width={400}
									height={300}
									class="gallery-image"
								/>
							))}
						</div>
					</div>
				)}
			</article>
		</main>
	</body>
</html>

<style>
	body {
		margin: 0;
		padding: 0;
		font-family: system-ui, sans-serif;
	}

	.destino-detail {
		max-width: 1200px;
		margin: 0 auto;
	}

	.hero-section {
		position: relative;
		height: 60vh;
		overflow: hidden;
		border-radius: 16px;
		margin: 2rem;
	}

	.hero-image {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.hero-content {
		position: absolute;
		bottom: 0;
		left: 0;
		right: 0;
		background: linear-gradient(transparent, rgba(0,0,0,0.8));
		color: white;
		padding: 3rem 2rem 2rem;
	}

	.hero-content h1 {
		font-size: 3rem;
		margin: 0 0 1rem 0;
	}

	.location-info {
		font-size: 1.2rem;
		margin-bottom: 1rem;
	}

	.rating {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		margin-bottom: 1rem;
	}

	.stars {
		color: #ffc107;
	}

	.price {
		font-size: 2rem;
		font-weight: bold;
		color: #ffc107;
	}

	.content-section {
		padding: 2rem;
		max-width: 800px;
		margin: 0 auto;
		line-height: 1.6;
	}

	.gallery-section {
		padding: 2rem;
	}

	.gallery-section h2 {
		text-align: center;
		margin-bottom: 2rem;
		font-size: 2rem;
	}

	.gallery-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 1rem;
	}

	.gallery-image {
		width: 100%;
		height: 300px;
		object-fit: cover;
		border-radius: 8px;
	}

	@media (max-width: 768px) {
		.hero-content h1 {
			font-size: 2rem;
		}

		.hero-section {
			height: 50vh;
			margin: 1rem;
		}

		.content-section {
			padding: 1rem;
		}
	}
</style>