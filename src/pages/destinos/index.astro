---
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import SearchDestinos from '../../components/SearchDestinos.astro';

const allDestinos = await getCollection('destinos');
const destinosNacionais = allDestinos
  .filter(destino => destino.data.country === 'BRASIL')
  .sort((a, b) => (a.data.order || 0) - (b.data.order || 0));

const destinosInternacionais = allDestinos
  .filter(destino => destino.data.country !== 'BRASIL')
  .sort((a, b) => (a.data.order || 0) - (b.data.order || 0));
---

<html lang="pt-BR">
  <head>
    <BaseHead title="Destinos - Partiu Viagem" description="Explore nossos destinos nacionais e internacionais" />
  </head>
  <body>
    <Header />
    <main>
      <div class="container">
        <h1>Nossos Destinos</h1>
        <p class="subtitle">Explore nossos destinos cuidadosamente selecionados para sua pr√≥xima aventura</p>
        
        <SearchDestinos placeholder="Buscar por destino ou data..." />

        <div class="destinos-grid">
          {allDestinos.map((destino) => (
            <div class="destino-card">
              <a href={`/destinos/${destino.slug}`}>
                <div class="card-image">
                  <Image 
                    src={destino.data.featuredImage} 
                    alt={destino.data.title} 
                    width={400} 
                    height={300} 
                    format="avif" 
                    quality={80} 
                  />
                </div>
                <div class="card-content">
                  {destino.data.isPromo && <div class="promo-badge">PROMO</div>}
                  <h3 class="card-title">{destino.data.title}</h3>
                  <div class="location">
                    <span class="location-icon">üìç</span>
                    <span>{destino.data.location}</span>
                  </div>
                  <div class="description">{destino.data.description}</div>
                  <div class="trip-dates">
                    <span class="calendar-icon">üìÖ</span>
                    <span>{destino.data.tripDates[0]}</span>
                  </div>
                  <div class="rating">
                    <div class="stars">
                      {Array.from({ length: 5 }, (_, i) => (
                        <span class={i < Math.floor(destino.data.rating) ? 'star filled' : 'star'}>‚òÖ</span>
                      ))}
                    </div>
                    <span class="rating-text">{destino.data.rating} ({destino.data.reviewCount} Reviews)</span>
                  </div>
                  <div class="price">{destino.data.currency} {destino.data.price.toLocaleString('pt-BR')}</div>
                </div>
              </a>
            </div>
          ))}
        </div>
      </div>
    </main>
    <Footer />
  </body>
</html>

<style>
  main {
    padding-top: 120px;
    min-height: calc(100vh - 120px);
    background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  h1 {
    font-size: 2.5rem;
    font-weight: 700;
    color: #1e293b;
    text-align: center;
    margin-bottom: 1rem;
  }

  .subtitle {
    font-size: 1.1rem;
    color: #64748b;
    text-align: center;
    max-width: 600px;
    margin: 0 auto 3rem;
    line-height: 1.6;
  }

  .destinos-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .destino-card {
    background: white;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
  }

  .destino-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
  }

  .destino-card a {
    text-decoration: none;
    color: inherit;
  }

  .card-image {
    position: relative;
    height: 200px;
    overflow: hidden;
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .destino-card:hover .card-image img {
    transform: scale(1.05);
  }

  .promo-badge {
    position: absolute;
    top: 12px;
    left: 12px;
    background: linear-gradient(135deg, #3b82f6, #1d4ed8);
    color: white;
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .card-content {
    padding: 1.5rem;
  }

  .card-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: #1e293b;
    margin-bottom: 0.75rem;
    line-height: 1.3;
  }

  .location {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #64748b;
    font-size: 0.875rem;
    margin-bottom: 1rem;
  }

  .description {
    color: #64748b;
    font-size: 0.875rem;
    margin-bottom: 1rem;
    line-height: 1.5;
  }

  .trip-dates {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #64748b;
    font-size: 0.875rem;
    margin-bottom: 1rem;
  }

  .rating {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
  }

  .stars {
    display: flex;
    gap: 2px;
  }

  .star {
    color: #e2e8f0;
    font-size: 1rem;
  }

  .star.filled {
    color: #fbbf24;
  }

  .rating-text {
    font-size: 0.875rem;
    color: #64748b;
  }

  .price {
    font-size: 1.5rem;
    font-weight: 700;
    color: #2563eb;
  }

  @media (max-width: 768px) {
    .container {
      padding: 1rem;
    }

    h1 {
      font-size: 2rem;
    }

    .subtitle {
      font-size: 1rem;
      margin-bottom: 2rem;
    }

    .destinos-grid {
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 1.5rem;
    }

    .card-content {
      padding: 1.25rem;
    }

    .card-title {
      font-size: 1.125rem;
    }

    .price {
      font-size: 1.25rem;
    }
  }
</style>